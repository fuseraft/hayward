fn respond(message: string, ok: boolean = true)
  var (response: hashmap = {})

  response.ok = ok
  response.bad = !response.ok
  response.message = message

  return response
end

fn main()
  r = respond("hello")
  
  if !r.ok
    eprintln "An error occurred: ${r.message}"
    return
  end

  println "Response: ${r.message}"
end

main()